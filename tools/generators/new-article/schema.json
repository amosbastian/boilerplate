{
  "cli": "nx",
  "id": "new-article",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the article",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What's the title of your new article?",
      "pattern": "^[a-zA-Z].*$"
    },
    "author": {
      "type": "string",
      "description": "The name of the author",
      "x-prompt": "What's the name of the author?",
      "default": "Amos Bastian"
    },
    "description": {
      "type": "string",
      "description": "A description that summarises the article in a single line"
    }
  },
  "required": ["title", "author"]
}
